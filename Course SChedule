class Solution {
    int[] parent;
    
    public boolean canFinish(int numCourses, int[][] prerequisites) {
        parent = new int[numCourses];
        for(int i = 0;  i< numCourses ; i++){
            parent[i] = i;
        }
        for(int[] course : prerequisites){
            if(parent[course[0]] == parent[course[1]]){
                return false;
            }
            parent[course[0]] = course[1];
        }
        return true;
    }
}
